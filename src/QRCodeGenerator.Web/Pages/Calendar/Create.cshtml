@page

@model QRCodeGenerator.Web.Pages.Calendar.Create

@{
    ViewData["Title"] = "Create";
}

<h2>Create Calendar QR Code</h2>
<hr />
<p>Fill in the form details, click create and a QR Code image will be created for you</p>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            @Html.FormBlock(m => m.Data.Subject)
            @Html.FormBlock(m => m.Data.Description)
            @Html.FormBlock(m => m.Data.StartDate)
            @Html.FormBlock(m => m.Data.StartTime)
            @Html.FormBlock(m => m.Data.EndDate)
            @Html.FormBlock(m => m.Data.EndTime)
            @Html.FormBlock(m => m.Data.AllDayEvent)
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
            @Html.ValidationDiv()
        </form>
    </div>
</div>

<div>
    <a asp-page="/Index">Back to Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}