@page
@model QRCodeGenerator.Web.Pages.Email.Create

@{
    ViewData["Title"] = "Create";
}

<h2>Create Email QR code</h2>
<hr />
<p>Fill in the form details, click create and a QR Code image will be created for you</p>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            @Html.FormBlock(m => m.Data.EmailTo)
            @Html.FormBlock(m => m.Data.EventNumber)
            @Html.FormBlock(m => m.Data.EventName)
            @Html.FormBlock(m => m.Data.Message)
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
            @Html.ValidationDiv()
        </form>
    </div>
</div>

<div>
    <a asp-page="/Index">Back to Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}